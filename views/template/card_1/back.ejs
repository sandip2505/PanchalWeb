    <title>Business Card</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f9f9f9;
        }

        .card {
            width: 500px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            overflow: hidden;
        }

        .logo img {
            width: 200px;
            height: auto;
        }

        .logo {
            filter: drop-shadow(6px 9px 6px #696969);
        }

        h1 {
            font-size: 1.5em;
            margin: 0;
            color: #333;
        }

        h4 {
            font-size: 1.1em;
            margin: 0;
            color: #666;
        }

        .details {
            margin-top: 20px;
            text-align: left;
            font-size: 0.9em;
            line-height: 1.6;
            border: 1px solid #0a0a0a3d;
            border-radius: 10px;
            padding: 10px;
            margin: 20px;

        }

        .details span {
            display: flex;
            margin-bottom: 8px;
        }

        .details span span {
            color: #555;
        }

        .buttons {
            margin-bottom: 20px;
            padding: 0 20px;
            display: grid;
            align-items: start;
            justify-content: space-between;
            grid-template-columns: repeat(2, minmax(0, 200px));
        }

        .button {
            display: flex;
            align-items: center;
            gap: 5px;
            height: 30px;
            cursor: pointer;
            margin-top: 10px;
        }

        .button span {
            color: #555
        }

        .button:hover span {
            color: #000
        }

        .button svg {
            width: 20%;
            height: 100%;
            fill: #555;
        }

        .button:hover svg {
            fill: #000;
        }

        .margin-left-2 {
            margin-left: 10px;
            margin-bottom: 0 !important;
            margin-top: 0 !important;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: linear-gradient(90deg, rgba(181, 217, 240, 0.804359243697479) 0%, rgba(53, 113, 201, 1) 50%, rgba(7, 49, 196, 1) 64%, rgba(0, 37, 153, 1) 79%, rgba(29, 64, 161, 1) 94%, rgba(69, 100, 184, 1) 100%);
            color: white;
            padding: 20px;
        }

        .header * {
            color: white;
            font-family: "Bona Nova SC", serif;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;

        }
    </style>
</head>


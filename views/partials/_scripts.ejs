<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const radioButtons = document.querySelectorAll('input[name="template_id"]');
    const previewButtons = document.querySelectorAll('.preview-button');

    radioButtons.forEach((radio) => {
      radio.addEventListener('change', () => {
        previewButtons.forEach(button => button.style.display = 'none');
        if (radio.checked) {
          document.getElementById(`preview_${radio.id.split('_')[1]}`).style.display = 'block';
        }
      });
    });
  });


  function confirmDelete() {
    return confirm('Are you sure you want to delete this item?');
  }

  const recurring = document.querySelector('input[name="is_recurring"]')
  recurring.addEventListener('change', (e) => {
    const interval = document.querySelector('input[name="interval"]')
    const period = document.querySelector('input[name="period"]')

    const intervalParent = interval.parentNode.parentNode.parentNode
    const periodParent = period.parentNode.parentNode.parentNode

    if (!e.target.checked) {
      console.log(period, interval)
      intervalParent.classList.add('d-none')
      periodParent.classList.add('d-none')
      interval.value = 0
      period.value = 'one_time'
      console.log(period.value, "period.value")
    } else {
      intervalParent.classList.remove('d-none')
      periodParent.classList.remove('d-none')
      period.target.value = ''
    }
  })
</script>
